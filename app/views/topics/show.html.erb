<h1><%= @topic.name %></h1>

<div class="row">
  <div class="span8">
    <p class="lead"><%= @topic.body %></p>
    <% @tags.each do |tag| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to tag.title, tag %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span4">
    <% if can? :create, Tag %>
      <%= link_to "New Tag", new_topic_tag_path(@topic), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>
